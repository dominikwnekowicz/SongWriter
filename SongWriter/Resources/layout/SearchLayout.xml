<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--loading progressbar-->
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/LoadingContentLoadingProgressBar"
        android:gravity="center"
        android:paddingTop="25dp"
        android:visibility="visible"
        android:layout_alignParentStart="true"
        />

    <!--list of words-->
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fastScrollEnabled="true"
        android:layout_centerInParent="true"
        android:layout_above="@id/FoundedAmountTextView"
        android:id="@+id/SearchListView"
    />

    <!--count of founded words-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Szukam..."
        android:id="@+id/FoundedAmountTextView"
        android:paddingVertical="7dp"
        android:textSize="14dp"
        android:layout_above="@id/LineView"
    />

    <!--line-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/LineView"
        android:layout_above="@id/ExitSearchingButton"
        android:background="@color/colorAccent"
    />

    <!--exit button-->
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WYJDÅ¹"
        android:layout_alignParentBottom="true"
        android:id="@+id/ExitSearchingButton"
        android:background="@android:color/transparent"
        android:textColor="@color/colorAccent"
    />
</RelativeLayout>
